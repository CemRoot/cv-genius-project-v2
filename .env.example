# Environment Variables for CV Genius Project

# Google Gemini AI Configuration
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production

# Application Settings
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
NEXT_PUBLIC_SITE_NAME=CV Genius

# Google AdSense Configuration
NEXT_PUBLIC_ADSENSE_CLIENT=ca-pub-1742989559393752
NEXT_PUBLIC_ADSENSE_SIDEBAR_SLOT=your_sidebar_ad_slot_id
NEXT_PUBLIC_ADSENSE_INLINE_SLOT=your_inline_ad_slot_id
NEXT_PUBLIC_ADSENSE_FOOTER_SLOT=your_footer_ad_slot_id
NEXT_PUBLIC_ADSENSE_STICKY_SLOT=your_sticky_ad_slot_id

# Optional: Analytics (for future use)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Optional: Database (for future features)
# DATABASE_URL=your_database_url_here
# DATABASE_TOKEN=your_database_token_here

# Security
NEXTAUTH_SECRET=your_secret_key_here
NEXTAUTH_URL=https://your-app.vercel.app

# Analytics (optional)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=cvgenius.ie

# Rate limiting (optional)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Admin Panel Security Keys (CRITICAL - Generate unique values for production)
# Generate random hex values for security: https://passwordsgenerator.net/hex-generator/
ADMIN_KEY_1=0x1A2B
ADMIN_KEY_2=0x3C4D
ADMIN_KEY_3=0x5E6F
ADMIN_KEY_4=0x7890

# JWT Configuration for Admin Panel
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-at-least-32-characters